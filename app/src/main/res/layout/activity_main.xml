<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/colorAccent"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/button_6"
        android:layout_width="92dp"
        android:layout_height="77dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/button"
        android:fontFamily="sans-serif-black"
        android:text="6"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/button_5"
        app:layout_constraintTop_toBottomOf="@+id/button_9" />

    <EditText
        android:id="@+id/result"
        android:layout_width="381dp"
        android:layout_height="155dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:clickable="false"
        android:focusable="false"
        android:fontFamily="sans-serif-black"
        android:cursorVisible="false"
        android:inputType="none"
        android:textColor="#34d2eb"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/clear_button"
        android:layout_width="179dp"
        android:layout_height="77dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="2dp"
        android:fontFamily="sans-serif-black"
        android:text="CLEAR"
        android:background="@drawable/selector"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/result" />

    <Button
        android:id="@+id/button_delete"
        android:layout_width="196dp"
        android:layout_height="76dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/selector"
        android:fontFamily="sans-serif-black"
        android:text="DEL"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/clear_button"
        app:layout_constraintTop_toBottomOf="@+id/result" />

    <Button
        android:id="@+id/button_7"
        android:layout_width="92dp"
        android:layout_height="77dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="2dp"
        android:fontFamily="sans-serif-black"
        android:text="7"
        android:background="@drawable/button"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_modulo" />

    <Button
        android:id="@+id/button_8"
        android:layout_width="92dp"
        android:layout_height="77dp"
        android:layout_marginTop="2dp"
        android:fontFamily="sans-serif-black"
        android:text="8"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        android:background="@drawable/button"
        app:layout_constraintStart_toEndOf="@+id/button_7"
        app:layout_constraintTop_toBottomOf="@+id/button_pow" />

    <Button
        android:id="@+id/button_9"
        android:layout_width="92dp"
        android:layout_height="77dp"
        android:layout_marginTop="2dp"
        android:fontFamily="sans-serif-black"
        android:text="9"
        android:textAlignment="center"
        android:background="@drawable/button"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/button_8"
        app:layout_constraintTop_toBottomOf="@+id/button_sqrt" />

    <Button
        android:id="@+id/button_divide"
        android:layout_width="101dp"
        android:layout_height="77dp"
        android:background="@drawable/selector"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="sans-serif-black"
        android:text="/"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.076"
        app:layout_constraintStart_toEndOf="@+id/button_9"
        app:layout_constraintTop_toBottomOf="@+id/clear_button" />

    <Button
        android:id="@+id/button_4"
        android:layout_width="92dp"
        android:layout_height="77dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="2dp"
        android:fontFamily="sans-serif-black"
        android:text="4"
        android:background="@drawable/button"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_7" />

    <Button
        android:id="@+id/button_5"
        android:layout_width="92dp"
        android:layout_height="77dp"
        android:layout_marginTop="2dp"
        android:fontFamily="sans-serif-black"
        android:text="5"
        android:textAlignment="center"
        android:textSize="24sp"
        android:background="@drawable/button"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/button_4"
        app:layout_constraintTop_toBottomOf="@+id/button_8" />

    <Button
        android:id="@+id/button_multiply"
        android:layout_width="101dp"
        android:layout_height="77dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="16dp"
        android:text="X"
        android:textAlignment="center"
        android:textSize="24sp"
        android:background="@drawable/selector"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button_6"
        app:layout_constraintTop_toBottomOf="@+id/button_divide" />

    <Button
        android:id="@+id/button_1"
        android:layout_width="92dp"
        android:layout_height="77dp"
        android:background="@drawable/button"
        android:layout_marginStart="16dp"
        android:layout_marginTop="2dp"
        android:fontFamily="sans-serif-black"
        android:text="1"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_4" />

    <Button
        android:id="@+id/button_2"
        android:layout_width="92dp"
        android:layout_height="77dp"
        android:layout_marginTop="2dp"
        android:fontFamily="sans-serif-black"
        android:text="2"
        android:textAlignment="center"
        android:textSize="24sp"
        android:background="@drawable/button"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/button_1"
        app:layout_constraintTop_toBottomOf="@+id/button_5" />

    <Button
        android:id="@+id/button_3"
        android:layout_width="92dp"
        android:layout_height="77dp"
        android:layout_marginTop="2dp"
        android:fontFamily="sans-serif-black"
        android:text="3"
        android:background="@drawable/button"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/button_2"
        app:layout_constraintTop_toBottomOf="@+id/button_6" />

    <Button
        android:id="@+id/button_minus"
        android:layout_width="101dp"
        android:layout_height="77dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="16dp"
        android:text="-"
        android:textAlignment="center"
        android:background="@drawable/selector"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button_3"
        app:layout_constraintTop_toBottomOf="@+id/button_multiply" />

    <Button
        android:id="@+id/button_point"
        android:layout_width="92dp"
        android:layout_height="77dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/selector"
        android:fontFamily="sans-serif-black"
        android:text="."
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_1"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/button_0"
        android:layout_width="92dp"
        android:layout_height="77dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/button"
        android:fontFamily="sans-serif-black"
        android:text="0"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button_point"
        app:layout_constraintTop_toBottomOf="@+id/button_2"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/button_equals"
        android:layout_width="92dp"
        android:layout_height="77dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/selector"
        android:fontFamily="sans-serif-black"
        android:text="="
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button_0"
        app:layout_constraintTop_toBottomOf="@+id/button_3"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/button_add"
        android:layout_width="101dp"
        android:layout_height="155dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="13dp"
        android:background="@drawable/selector"
        android:text="+"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toEndOf="@+id/button_equals"
        app:layout_constraintTop_toBottomOf="@+id/button_minus"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/button_modulo"
        android:layout_width="92dp"
        android:layout_height="77dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="2dp"
        android:fontFamily="sans-serif-black"
        android:text="%"
        android:background="@drawable/selector"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/clear_button" />

    <Button
        android:id="@+id/button_pow"
        android:layout_width="92dp"
        android:layout_height="77dp"
        android:layout_marginTop="2dp"
        android:fontFamily="sans-serif-black"
        android:text="pow"
        android:background="@drawable/selector"
        app:layout_constraintStart_toEndOf="@+id/button_modulo"
        app:layout_constraintTop_toBottomOf="@+id/clear_button" />

    <Button
        android:id="@+id/button_sqrt"
        android:layout_width="92dp"
        android:layout_height="77dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/selector"
        android:fontFamily="sans-serif-black"
        android:text="sqrt"
        app:layout_constraintStart_toEndOf="@+id/button_pow"
        app:layout_constraintTop_toBottomOf="@+id/clear_button" />


</androidx.constraintlayout.widget.ConstraintLayout>